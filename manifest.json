{
  "description": "Real infinite scrolling on X",
  "manifest_version": 2,
  "name": "Schuifmaat",
  "version": "0.1.0",

  "browser_specific_settings": {
    "gecko": {
      "update_url": "https://extensions.digitalmethods.net/updates.json",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },

  "permissions": [
    "webNavigation", "<all_urls>", "storage", "activeTab", "tabs"
  ],

  "incognito": "not_allowed",

  "background": {
    "scripts": [
      "lib.js",
      "background.js"
    ],
    "persistent": false
  },

  "browser_action": {
    "default_title": "schuifmaat",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": [
        "https://x.com/*"
      ],
      "js": [
        "lib.js",
        "content.js"
      ]
    }
  ]
}
